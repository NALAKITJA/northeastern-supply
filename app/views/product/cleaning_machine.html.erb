<title><%= t('title.product')%></title>
<div class="w3-container" style="text-align: center;">
  <h4 style="margin: auto;text-align: center; margin-top: 5%;"><%= t('home.product.cleaning_machine')%></h4>
  <div class="row" style="margin: auto; padding: 5% 10%;">
    <div class="col-sm-4 box" data-toggle="modal" data-target="#cleaning_machine">
      <img src="http://www.thaitechno.net/uploadedimages/c1/Product_37449_197579320_fullsize.jpg" class="img-thumbnail" style="width:70%;">
      <p style="text-align: center; font-size: 20px;padding-top: 10%;"><%= raw t('home.product.floor_scrub')%></p>
    </div>
    <div class="col-sm-4 box" data-toggle="modal" data-target="#vaccum_cleaning">
      <img src="https://images.jmcatalog.com/prdimgs/SPEC33Tr1l8/NSS/450/NSS9600121.JPG" class="img-thumbnail" style="width:70%;">
      <p style="text-align: center; font-size: 20px;padding-top: 10%;"><%= raw t('home.product.vaccum_cleaning')%></p>
    </div>
    <div class="col-sm-4 box">
      <img src="https://f.ptcdn.info/882/047/000/oi3sx73146TRoHCfzpt-o.jpg" class="img-thumbnail" style="width:70%;">
      <p style="text-align: center; font-size: 20px;padding-top: 10%;"><%= raw t('home.product.cleaning_spare')%></p>
    </div>
  </div>
</div>
<div class="modal fade" id="cleaning_machine">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body" style="text-align: center;">
        <h4 class="modal-title"><%= raw t('home.product.floor_scrub')%></h4><br>
        <img src="http://www.thaitechno.net/uploadedimages/c1/Product_37449_197579320_fullsize.jpg" class="img-thumbnail" style="width:70%;"><br>
        <p style="margin-top: 5%;"><%= t('home.clean.n_rust')%></p>
      </div>
      <div class="modal-footer">
        <div class="container" style="text-align: center;">
          <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#machine"><%= t('button.contact')%></button><br>
          <div id="machine" class="collapse" style="margin-left: 15%;">
            <%= render 'shared/contact'%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="vaccum_cleaning">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body" style="text-align: center;">
        <h4 class="modal-title"><%= raw t('home.product.vaccum_cleaning')%></h4><br>
        <img src="https://images.jmcatalog.com/prdimgs/SPEC33Tr1l8/NSS/450/NSS9600121.JPG" class="img-thumbnail" style="width:70%;"><br>
        <div class="container" style="text-align: center; margin-top: 2%; height: 270px;">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#details"><%= t('title.details')%></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#contact"><%= t('button.contact')%></a>
            </li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content">
            <div id="details" class="container tab-pane active"><br>
              <p><%= t('home.machine.vacuum')%></p>
            </div>
            <div id="contact" class="container tab-pane fade" style="margin-left: 10%;"><br>
              <%= render 'shared/contact'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
